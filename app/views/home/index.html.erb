<% @questions.each do |question| %>
	<%= link_to "#{question.name}", question_url(question.id), class: 'question' %>
	<%= link_to "follow #{question.topic.name}", "#{request.base_url}/question/#{question.id}/follow_topic", method: :post, class: 'follow_topic' %>
	<%= link_to "follow #{question.user.email}", follow_user_url(question.id), method: :post, class: 'follow_user' %><br>
<% end %>
<%= link_to 'create question', new_question_path %>
